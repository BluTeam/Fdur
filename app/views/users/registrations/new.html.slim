.container
  .col-sm-0.col-md-1.col-lg-2
  .col-xs-12.col-sm-12.col-md-10.col-lg-8.top-stand
    .panel.panel-default.panel-padding
      .panel-body
        h2.container.welcome.col-sm-12
          | 创建用户
        .col-sm-6.common_panel
          p.login_or_sign.strong
            | 小伙伴门快来注册吧
            span.pull-right
              | 或者
              = link_to "登录", new_user_session_path

          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            /- binding.pry
            /= devise_error_messages!
            / TODO: 修改rails helper生成方法来生成自动提示错误的field
            .form-group class="#{resource.errors.messages[:email].nil? ? '': "has-error"}"
              = f.label 'Email', for: :user_email, class: 'control-label'
              = f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control"
            .form-group class="#{resource.errors.messages[:password].nil? ? '': "has-error"}"
              = f.label 'Password', for: :uesr_password, class: 'control-label'
              -if @validatable
                i
                  | (至少#{@minimum_password_length}个字符)
              = f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: :off
            .form-group class="#{resource.errors.messages[:password_confirmation].nil? ? '': "has-error"}"
              = f.label 'Password Confirmation', for: :user_password_confirmation, class: 'control-label'
              = f.password_field :password_confirmation, placeholder: "Confirmation", class: "form-control", autocomplete: :off
            p.text-center.strong
              | 点击注册表示已同意
              a href="#"
                | 《米er服务协议》
            = f.submit "注册", class: "btn btn-success btn-lg strong button_padding"
        .col-sm-6.right_panel
          div
            .col-xs-3
              = image_tag "foot.png"
            .col-xs-9.bottom-stand
              p.strong14
                | 计划和记录
              span.small
                | 抛开空想和等待，让学习和实践充实生活；留下你走向成功的每一个脚印。
          div
            .col-xs-3
              = image_tag "friends.png"
            .col-xs-9.bottom-stand
              p.strong14
                | 收获与分享
              span.small
                | 和朋友们互相分享脚踏实地的历程；走过太多的生活百态，一路总有你陪伴。
          div
            .col-xs-3
              = image_tag "fork.png"
            .col-xs-9.bottom-stand
              p.strong14
                | 自媒体平台
              span.small
                | 小伙伴们互相收藏&拷贝；说自己想说的话，打造属于你自己的的媒体。
          div
            p.small
              | 米er，带给生活更加丰富多彩，无论手机、平板还是电脑。
  .col-sm-0.col-md-1.col-lg-2
.container
